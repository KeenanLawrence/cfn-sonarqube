{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Conditions": {
    "SetIops": { "Fn::Equals": [ { "Ref": "DbStorageType" }, "io1" ] },
    "SetNodeName": {
      "Fn::Not": [
        {
          "Fn::Equals": [ { "Ref": "DbNodeName" }, "" ]
        }
      ]
    },
    "UseDbSnapshot": {
      "Fn::Not": [
        { "Fn::Equals": [ { "Ref": "DbSnapshotId" }, "" ] }
      ]
    }
  },
  "Description": "This template deploys a small, single- or multi-AZ PGSQL database to support Sonarqube.",
  "Mappings": {},
  "Metadata": {
    "AWS::CloudFormation::Interface": {
      "ParameterGroups": [
        {
          "Parameters": [
            "PgsqlVersion",
            "DbInstanceType",
            "DbSnapshotId",
            "DbNodeName",
            "DbInstanceName",
            "DbDataSize",
            "DbStorageType",
            "DbStorageIops",
            "DbIsMultiAz",
            "DbAdminName",
            "DbAdminPass",
            "TargetVPC",
            "DbSubnets",
            "DbSecurityGroup"
          ]
        }
      ]
    }
  },
  "Outputs": {
    "RdsEndpointAddress": {
      "Value": { "Fn::GetAtt" : [ "RDSdb", "Endpoint.Address" ] },
      "Description": "RDS DB's endpoint FQDN."
    }
  },
  "Parameters": {
    "DbAdminName": {
      "Description": "Name of the Sonarqube master database-user.",
      "Type": "String"
    },
    "DbAdminPass": {
      "Description": "Password of the Sonarqube master database-user.",
      "NoEcho": "True",
      "Type": "String"
    },
    "DbDataSize": {
      "ConstraintDescription": "Must be between 5GB and 6144GB.",
      "Default": "5",
      "Description": "Size in GiB of the RDS table-space to create.",
      "MaxValue": "6144",
      "MinValue": "5",
      "Type": "Number"
    },
    "DbIsMultiAz": {
      "AllowedValues": [
        "false",
        "true"
      ],
      "Default": "false",
      "Description": "Select whether to create a multi-AZ RDS deployment.",
      "Type": "String"
    },
    "DbNodeName": {
      "Description": "NodeName of the Sonarqube database (optional: one will be assigned if left blank).",
      "Type": "String"
    },
    "DbInstanceName": {
      "Description": "Instance-name of the Sonarqube database.",
      "Type": "String"
    },
    "DbInstanceType": {
      "AllowedValues": [
        "db.t2.micro",
        "db.t2.small",
        "db.t2.medium",
        "db.t2.large",
        "db.t2.xlarge",
        "db.t2.2xlarge",
        "db.m4.large",
        "db.m4.xlarge",
        "db.m4.2xlarge",
        "db.m4.4xlarge",
        "db.m4.10xlarge",
        "db.m3.medium",
        "db.m3.large",
        "db.m3.xlarge",
        "db.m3.2xlarge",
        "db.m3.4xlarge",
        "db.r4.large",
        "db.r4.xlarge",
        "db.r4.2xlarge",
        "db.r4.4xlarge",
        "db.r4.8xlarge",
        "db.r3.large",
        "db.r3.xlarge",
        "db.r3.2xlarge",
        "db.r3.4xlarge",
        "db.r3.8xlarge"
      ],
      "Default": "db.t2.small",
      "Description": "Amazon RDS instance type",
      "Type": "String"
    },
    "DbSecurityGroup": {
      "Description": "List of security groups to apply to the RDS database.",
      "Type": "List<AWS::EC2::SecurityGroup::Id>"
    },
    "DbSnapshotId": {
      "AllowedPattern": "^$|^arn:.*$",
      "Default": "",
      "Description": "(Optional) RDS snapshot-ARN to clone new database from.",
      "Type": "String"
    },
    "DbStorageType" : {
      "AllowedValues": [
        "standard",
        "gp2",
        "io1"
      ],
      "Default": "gp2",
      "Description": "Type of storage used to host DB-data.",
      "Type": "String"
    },
    "DbStorageIops" : {
      "Default": "1000",
      "Description": "Provisioned-IOPS of storage to used to host DB-data (only valid if storage-type is 'io1').",
      "MaxValue": "30000",
      "MinValue": "1000",
      "Type": "Number"
    },
    "DbSubnets" : {
      "Type" : "List<AWS::EC2::Subnet::Id>",
      "Description" : "Select at least two subnets, each in different Availability Zones"
    },
    "PgsqlVersion": {
      "AllowedValues": [
        "9.6.6",
        "9.6.5",
        "9.6.3",
        "9.6.2",
        "9.6.1",
        "9.5.10",
        "9.5.9",
        "9.5.7",
        "9.5.6",
        "9.5.4",
        "9.5.2"
      ],
      "Default": "9.6.6",
      "Description": "The X.Y.Z version of the PostGreSQL database to deploy.",
      "Type": "String"
    },
    "TargetVPC": {
      "AllowedPattern": "^vpc-[0-9a-f]*$",
      "Description": "ID of the VPC to deploy cluster nodes into.",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "RDSdb": {
      "Metadata": {},
      "Properties": {
        "AllocatedStorage": { "Ref": "DbDataSize" },
        "AllowMajorVersionUpgrade": "true",
        "AutoMinorVersionUpgrade": "true",
        "BackupRetentionPeriod": "7",
        "DBInstanceClass": { "Ref": "DbInstanceType" },
        "DBInstanceIdentifier": {
          "Fn::If": [
            "SetNodeName",
            { "Ref": "DbNodeName" },
            { "Ref": "AWS::NoValue" }
          ]
        },
        "DBName": {
          "Fn::If": [
            "UseDbSnapshot",
            { "Ref": "AWS::NoValue" },
            { "Ref": "DbInstanceName" }
          ]
        },
        "DBSnapshotIdentifier": {
          "Fn::If": [
            "UseDbSnapshot",
            { "Ref": "DbSnapshotId" },
            { "Ref": "AWS::NoValue" }
          ]
        },
        "DBSubnetGroupName" : { "Ref" : "RDSdbSubnetGroup" },
        "Engine": "postgres",
        "EngineVersion": { "Ref": "PgsqlVersion" },
        "Iops": {
          "Fn::If": [
            "SetIops",
            { "Ref": "DbStorageIops" },
            { "Ref": "AWS::NoValue" }
          ]
        },
        "MasterUsername": { "Ref": "DbAdminName" },
        "MasterUserPassword": {
          "Fn::If": [
            "UseDbSnapshot",
            { "Ref": "AWS::NoValue" },
            { "Ref": "DbAdminPass" }
          ]
        },
        "MultiAZ": { "Ref": "DbIsMultiAz" },
        "PreferredBackupWindow": "23:30-00:00",
        "PreferredMaintenanceWindow": "sun:00:30-sun:01:00",
        "StorageType": { "Ref": "DbStorageType" },
        "PubliclyAccessible": "false",
        "Tags": [
          {
            "Key": "Description",
            "Value": "SonarQube PgSQL database"
          }
        ],
        "VPCSecurityGroups": { "Ref": "DbSecurityGroup" }
      },
      "Type": "AWS::RDS::DBInstance"
    },
    "RDSdbSubnetGroup": {
      "Type" : "AWS::RDS::DBSubnetGroup",
      "Properties" : {
        "DBSubnetGroupDescription" : "Subnets available for the RDS DB Instance",
        "SubnetIds" : { "Ref" : "DbSubnets" }
      }
    }
  }
}
